<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/date_id"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="2006 Dec.28"
                android:textColor="#000000"
                android:textSize="16sp" />

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imghd_id"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_below="@+id/date_id"
                android:layout_gravity="center"
                android:layout_marginVertical="0.5dp"
                android:layout_marginTop="44dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/nasa"/>

            <TextView
                android:id="@+id/title_id"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/imghd_id"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Moon Over Andromeda"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="5dp"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="16sp"/>

            <TextView
                android:id="@+id/copyright_id"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/title_id"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Credit &amp; Copyright: Adam Block and Tim Puckett"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="5dp"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="16sp" />

            <TextView
                android:id="@+id/description_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/copyright_id"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:text="The Great Spiral Galaxy in Andromeda (aka M31), a mere 2.5 million light-years distant, is the closest large spiral to our own Milky Way. Andromeda is visible to the unaided eye as a small, faint, fuzzy patch, but because its surface brightness is so low, casual skygazers can't appreciate the galaxy's impressive extent in planet Earth's sky. This entertaining composite image compares the angular size of the nearby galaxy to a brighter, more familiar celestial sight. In it, a deep exposure of Andromeda, tracing beautiful blue star clusters in spiral arms far beyond the bright yellow core, is combined with a typical view of a nearly full Moon. Shown at the same angular scale, the Moon covers about 1/2 degree on the sky, while the galaxy is clearly several times that size. The deep Andromeda exposure also includes two bright satellite galaxies, M32 and M110 (bottom)."
                android:textColor="#000000"
                android:textSize="16sp"
                android:scrollbars="vertical"
                android:layout_marginHorizontal="8dp"/>

        </RelativeLayout>
    </FrameLayout>
</ScrollView>